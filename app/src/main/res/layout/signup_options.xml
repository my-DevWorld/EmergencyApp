<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onboarding.screens.SignUpOptions">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/loginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/close"
            android:layout_marginStart="@dimen/dp_36"
            android:text="@string/signUp"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/primaryTextColo"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fbBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_92"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/fb_btn_bg"
        android:gravity="center_vertical|center"
        >
        <ImageView
            android:id="@+id/fb_logo"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_facebook"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fb_logo"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/sign_up_with_facebook"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/poppins_semi_bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/googleBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@+id/fbBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/google_btn_bg"
        android:elevation="@dimen/dp_3.5"
        android:gravity="center_vertical|center"
        >
        <ImageView
            android:id="@+id/google_logo"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_google_logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/google_logo"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/sign_up_with_google"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/primaryTextColo"
            android:fontFamily="@font/poppins_semi_bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@+id/googleBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/phone_btn_bg"
        android:elevation="@dimen/dp_3.5"
        android:gravity="center_vertical|center"
        >
        <ImageView
            android:id="@+id/phone_logo"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_call"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/phone_logo"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/sign_with_phone_number"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/poppins_semi_bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@color/whiteColor"
        android:elevation="@dimen/dp_0.5"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneBtn">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/dp_0.5"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/or"
            android:textAlignment="center"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneBtn"
        />

    <RelativeLayout
        android:id="@+id/emailBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/email_login_btn_bg"
        android:gravity="center"
        android:elevation="@dimen/dp_1.45"
        >
        <ImageView
            android:id="@+id/ic_mail"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_mail"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_mail"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/sign_up_email"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/registerHereLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:padding="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@+id/emailBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/signInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.1"
            android:text="@string/already_have_an_account"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/signInLabel"
            android:layout_marginStart="@dimen/dp_1"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.1"
            android:text="@string/login_here"
            android:textAlignment="center"
            android:textColor="@color/primaryButtonColorActive"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/registerHereLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>

















