<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onboarding.screens.SignUpOptions">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/loginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/close"
            android:layout_marginStart="36dp"
            android:text="@string/signUp"
            android:textSize="24sp"
            android:textColor="@color/primaryTextColo"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fbBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="92dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/fb_btn_bg"
        android:gravity="center_vertical|center"
        >
        <ImageView
            android:id="@+id/fb_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_facebook"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fb_logo"
            android:layout_marginStart="16dp"
            android:text="@string/sign_up_with_facebook"
            android:textSize="18sp"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/poppins_semibold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/googleBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/fbBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/google_btn_bg"
        android:elevation="3.5dp"
        android:gravity="center_vertical|center"
        >
        <ImageView
            android:id="@+id/google_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_google_logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/google_logo"
            android:layout_marginStart="16dp"
            android:text="@string/sign_up_with_google"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColo"
            android:fontFamily="@font/poppins_semibold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/googleBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/phone_btn_bg"
        android:elevation="3.5dp"
        android:gravity="center_vertical|center"
        >
        <ImageView
            android:id="@+id/phone_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_call"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/phone_logo"
            android:layout_marginStart="16dp"
            android:text="@string/sign_with_phone_number"
            android:textSize="18sp"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/poppins_semibold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        android:background="@color/whiteColor"
        android:elevation="0.5dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneBtn">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0.5dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="or"
            android:textAlignment="center"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneBtn"
        />

    <RelativeLayout
        android:id="@+id/emailBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/email_login_btn_bg"
        android:gravity="center"
        android:elevation="1.45dp"
        >
        <ImageView
            android:id="@+id/ic_mail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_mail"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_mail"
            android:layout_marginStart="16dp"
            android:text="@string/sign_up_email"
            android:textSize="18sp"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/registerHereLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/emailBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/signInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.1"
            android:text="@string/already_have_an_account"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/signInLabel"
            android:layout_marginStart="1dp"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.1"
            android:text="@string/login_here"
            android:textAlignment="center"
            android:textColor="@color/primaryButtonColorActive"
            android:textSize="15sp" />
    </RelativeLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/registerHereLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>

















