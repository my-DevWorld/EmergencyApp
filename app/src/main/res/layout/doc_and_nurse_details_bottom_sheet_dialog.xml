    <ImageView
        android:id="@+id/sp_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/ic_account"
        android:contentDescription="@string/service_provider_image" />

    <TextView
        android:id="@+id/doc_nurse_serviceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        tools:text="Doctor"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/forgotPassword"
        android:fontFamily="@font/poppins_bold_italic"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1.3"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:background="@color/backIconColor"
        />

    <TextView
        android:id="@+id/doc_nurse_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:gravity="center"
        tools:text="Name"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/primaryTextColo"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:id="@+id/doc_nurse_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:gravity="center"
        tools:text="Email"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/primaryTextColo"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:id="@+id/doc_nurse_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:gravity="center"
        tools:text="Phone No."
        android:textSize="@dimen/sp_16"
        android:textColor="@color/primaryTextColo"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:id="@+id/doc_nurse_resAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:gravity="center"
        tools:text="Residential Address"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/primaryTextColo"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:id="@+id/doc_nurse_serviceAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:gravity="center"
        tools:text="Doctor at: "
        android:textSize="@dimen/sp_16"
        android:textColor="@color/primaryTextColo"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:id="@+id/doc_nurse_speciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:gravity="center"
        tools:text="Speciality"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/primaryTextColo"
        android:fontFamily="@font/poppins_medium"
        />

    <TextView
        android:id="@+id/add_service_provider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:gravity="center"
        android:text="@string/add_to_contact_list"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/whiteColor"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/add_doc_nurse_bg"
        />
</LinearLayout>












