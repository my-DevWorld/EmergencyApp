<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onboarding.screens.Login">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:padding="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_close"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/close"
        android:layout_marginTop="72dp"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_emergency_alert_app_logo"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:text="@string/emergency_alert"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/adobe_heiti_std_regular"
            android:padding="4dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp"
        android:text="@string/log_in_with"
        android:textSize="18sp"
        android:textColor="@color/primaryTextColo"
        android:fontFamily="@font/poppins_regular"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/socilaBtn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/loginLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:padding="8dp"
        >
        <RelativeLayout
            android:id="@+id/fbBtn"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:background="@drawable/fb_btn_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_facebook"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/googleBtn"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/fbBtn"
            android:layout_marginStart="18dp"
            android:background="@drawable/google_btn_bg"
            android:elevation="2.5dp"

            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_google_logo"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/phoneBtn"
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/googleBtn"
            android:layout_marginStart="18dp"
            android:background="@drawable/phone_btn_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_call"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:background="@color/whiteColor"
        android:elevation="0.5dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socilaBtn">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0.5dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="or"
            android:textAlignment="center"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socilaBtn"
        />

    <RelativeLayout
        android:id="@+id/emailBtn"
        android:layout_width="250dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/email_login_btn_bg"
        android:gravity="center"
        android:elevation="1.45dp"
        >
    <ImageView
        android:id="@+id/ic_mail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_mail"
        android:layout_centerVertical="true"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ic_mail"
            android:layout_marginStart="8dp"
            android:text="@string/loginWithEmail"
            android:textSize="18sp"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registerHereLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/emailBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/signinLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.1"
            android:text="@string/don_t_have_an_account"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/signupWithSociaLite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/signinLabel"
            android:layout_marginStart="1dp"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.1"
            android:text="@string/register_here"
            android:textAlignment="center"
            android:textColor="@color/primaryButtonColorActive"
            android:textSize="15sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>