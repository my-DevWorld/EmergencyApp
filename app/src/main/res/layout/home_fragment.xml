<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rootViewBg"
    tools:context=".screens.patient.fragments.HomeFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:padding="18dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/sosBtn"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@drawable/sos_white_bg"
                android:elevation="7dp"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_alert_bell"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOS"
                    android:textSize="50sp"
                    android:textColor="@color/primaryButtonColorActive"
                    android:fontFamily="@font/poppins_semibold"
                    />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_on_button_to_make_a_request"
            android:textSize="18sp"
            android:textColor="@color/secondaryTextColor"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>


</FrameLayout>