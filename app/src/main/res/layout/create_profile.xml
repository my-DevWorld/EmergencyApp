<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onboarding.screens.CreateProfile">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/loginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/close"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/create_profile"
            android:textColor="@color/primaryTextColo"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/don_t_worry_you_can_change_this_info_later"
        android:textColor="@color/secondaryTextColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/label1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="36dp"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/personalInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/primaryButtonColorActive"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/personal_info"
                            android:textColor="@color/whiteColor"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/pInfoExpandLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:padding="4dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_less"
                            />


                        <ImageView
                            android:id="@+id/pInfoExpandMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:padding="4dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_more"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/personalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:visibility="visible">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userFullNameLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fullName">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userFullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textCapWords"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userDOBLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/date_of_birth">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userDOB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp"
                                android:inputType="none"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/genderLayout"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/border_line"
                            android:orientation="horizontal"
                            android:paddingStart="8dp"
                            android:paddingEnd="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/gender"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="36dp">

                                <TextView
                                    android:id="@+id/femaleLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/female"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="12sp" />

                                <CheckBox
                                    android:id="@+id/femaleCheckbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="4dp"
                                    android:layout_toEndOf="@+id/femaleLabel" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="24dp">

                                <TextView
                                    android:id="@+id/maleLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/male"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="12sp" />

                                <CheckBox
                                    android:id="@+id/maleCheckbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="4dp"
                                    android:layout_toEndOf="@+id/maleLabel" />
                            </RelativeLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userPhoneNumLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:hint="@string/contact_number">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userContact"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="number"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp"
                                android:maxLength="10"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userAddressLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/residential_address">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPostalAddress"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/medicalRecordCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header2"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/primaryButtonColorActive"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/medical_records"
                            android:textColor="@color/whiteColor"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/medRecExpandLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:padding="4dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_less"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/medRecExpandMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:padding="4dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_more"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/medRec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="4dp"
                                android:text="Weight in Kg:"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp"
                                />

                            <EditText
                                android:id="@+id/userWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="4dp"
                                android:background="@drawable/border_line"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:hint="67"
                                android:inputType="numberDecimal"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp"
                                android:maxLength="3"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="4dp"
                                android:text="Height in cm:"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/userHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="4dp"
                                android:background="@drawable/border_line"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:hint="250"
                                android:inputType="numberDecimal"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp"
                                android:maxLength="3"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="4dp"
                                android:text="Blood Group:"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/bloodGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="6dp"
                                android:paddingBottom="4dp"
                                android:background="@drawable/border_line"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:hint="O -"
                                android:inputType="textCapCharacters"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp"
                                android:maxLength="3"
                                />
                        </LinearLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userAllergiesLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="8dp"
                            android:paddingBottom="8dp"
                            android:hint="@string/allergies_reaction"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userAllergies"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textMultiLine"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/contactCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="24dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/header3"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/primaryButtonColorActive"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Emergency Contact"
                            android:textColor="@color/whiteColor"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/contactExpandLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:padding="4dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_less"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/contactExpandMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:padding="4dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_more"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="12dp"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactFullNameLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Contact name">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactFullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textCapWords"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactRelationLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/relation">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactRelation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textCapWords"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactPhoneNumbLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:hint="@string/contact_number">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactPhoneNumb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="number"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp"
                                android:maxLength="10"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactAddressLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="@string/residential_address">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPostalAddress"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/doneBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/email_login_btn_bg"
                            android:text="@string/done"
                            android:textSize="18sp"
                            android:textColor="@color/whiteColor"
                            android:fontFamily="@font/poppins_medium"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="150dp"
                android:layout_height="54dp"
                app:layout_constraintTop_toBottomOf="@+id/contactCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:background="@drawable/submit_btn_bg"
                android:text="@string/submit"
                android:textSize="18sp"
                android:textColor="@color/whiteColor"
                android:fontFamily="@font/poppins_medium"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>























