<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RelativeOverlap"
    tools:context="onboarding.screens.CreateProfile">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/create_profile"
            android:textColor="@color/primaryTextColo"
            android:textSize="@dimen/sp_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/don_t_worry_you_can_change_this_info_later"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionBar" />

    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/stepIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_55"
        android:layout_marginEnd="@dimen/dp_55"
        app:stpi_stepCount="3"
        app:stpi_indicatorColor="@color/greenBtn"
        app:stpi_circleColor="@color/primaryButtonColorActive"
        app:stpi_lineColor="@color/primaryButtonColorActive"
        app:stpi_lineDoneColor="@color/greenBtn"
        app:layout_constraintTop_toBottomOf="@+id/label1"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@+id/stepIndicator"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_36"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/personalInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_24"
                android:elevation="@dimen/dp_3"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:background="@color/primaryButtonColorActive"
                        android:paddingStart="@dimen/dp_6"
                        android:paddingEnd="@dimen/dp_6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/personal_info"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/sp_20"
                             />

                        <ImageView
                            android:id="@+id/pInfoExpandLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:padding="@dimen/dp_4"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_less"
                            />


                        <ImageView
                            android:id="@+id/pInfoExpandMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:padding="@dimen/dp_4"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_more"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/personalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_8"
                        android:visibility="visible">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userFullNameLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fullName">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userFullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPersonName"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userDOBLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:hint="@string/date_of_birth">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userDOB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16"
                                android:inputType="none"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/genderLayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_56"
                            android:layout_marginTop="@dimen/dp_12"
                            android:background="@drawable/border_line"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingEnd="@dimen/dp_4">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/gender"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_36">

                                <TextView
                                    android:id="@+id/femaleLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:text="@string/female"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="@dimen/sp_12" />

                                <CheckBox
                                    android:id="@+id/femaleCheckbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dp_4"
                                    android:layout_toEndOf="@+id/femaleLabel" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_24">

                                <TextView
                                    android:id="@+id/maleLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:text="@string/male"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="@dimen/sp_12" />

                                <CheckBox
                                    android:id="@+id/maleCheckbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dp_4"
                                    android:layout_toEndOf="@+id/maleLabel" />
                            </RelativeLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userPhoneNumLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_12"
                            android:hint="@string/contact_number">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userContact"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="number"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16"
                                android:maxLength="10"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userAddressLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:hint="@string/residential_address">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPostalAddress"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/medicalRecordCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_24"
                android:elevation="@dimen/dp_3"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/header2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:background="@color/primaryButtonColorActive"
                        android:paddingStart="@dimen/dp_6"
                        android:paddingEnd="@dimen/dp_6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/medical_records"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/sp_20" />

                        <ImageView
                            android:id="@+id/medRecExpandLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:padding="@dimen/dp_4"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_less"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/medRecExpandMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:padding="@dimen/dp_4"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_more"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/medRec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_4"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="@dimen/dp_4"
                                android:text="@string/weight_in_kg"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16"
                                />

                            <EditText
                                android:id="@+id/userWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_6"
                                android:paddingBottom="@dimen/dp_4"
                                android:background="@drawable/border_line"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:hint="@string/_67"
                                android:inputType="numberDecimal"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16"
                                android:maxLength="3"
                                android:autofillHints="@null" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="@dimen/dp_4"
                                android:text="@string/height_in_cm"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />

                            <EditText
                                android:id="@+id/userHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_6"
                                android:paddingBottom="@dimen/dp_4"
                                android:background="@drawable/border_line"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:hint="@string/_250"
                                android:inputType="numberDecimal"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16"
                                android:maxLength="3"
                                android:autofillHints="@null"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="@dimen/dp_14"
                                android:text="@string/blood_group"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />

                            <EditText
                                android:id="@+id/bloodGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:paddingStart="@dimen/dp_10"
                                android:paddingEnd="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_6"
                                android:paddingBottom="@dimen/dp_4"
                                android:background="@drawable/border_line"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center_vertical"
                                android:hint="@string/o"
                                android:inputType="textCapCharacters"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16"
                                android:maxLength="3"
                                android:visibility="gone"
                                android:autofillHints="@null"
                                />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_line"
                                android:layout_marginStart="@dimen/dp_8"
                                >
                                <Spinner
                                    android:id="@+id/bloodGroupSpinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingBottom="@dimen/dp_10"
                                    />
                            </RelativeLayout>


                        </LinearLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userAllergiesLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:paddingBottom="@dimen/dp_8"
                            android:hint="@string/allergies_reaction"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userAllergies"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textMultiLine"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/contactCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_24"
                android:elevation="@dimen/dp_3"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/header3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:background="@color/primaryButtonColorActive"
                        android:paddingStart="@dimen/dp_6"
                        android:paddingEnd="@dimen/dp_56">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:text="@string/emergency_contact"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/sp_20" />

                        <ImageView
                            android:id="@+id/contactExpandLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:padding="@dimen/dp_4"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_less"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/contactExpandMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:padding="@dimen/dp_4"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_expand_more"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_12"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactFullNameLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/contact_name">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactFullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPersonName"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactRelationLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:hint="@string/relation">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactRelation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textCapWords"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactPhoneNumbLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_12"
                            android:hint="@string/contact_number">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactPhoneNumb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="number"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16"
                                android:maxLength="10"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/contactAddressLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:hint="@string/residential_address">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/contactAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textPostalAddress"
                                android:textColor="@color/primaryTextColo"
                                android:textSize="@dimen/sp_16" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:id="@+id/doneBtn"
