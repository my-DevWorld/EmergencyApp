<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_line"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_3"
    android:elevation="@dimen/dp_4.5"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        >
        <ImageView
            android:id="@+id/hospital_image"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:src="@drawable/ic_account"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/user_image" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Hospital Name"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/primaryButtonColorActive"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/hospital_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Specialty"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/primaryTextColo"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:id="@+id/hospital_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Location"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/secondaryTextColor"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
