<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_24"
    android:orientation="vertical"
    tools:ignore="RelativeOverlap"
    tools:context=".screens.service_provider.fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_88"
            android:src="@drawable/ic_account"
            android:contentDescription="@string/user_image" />

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/primaryTextColo"
                android:textSize="@dimen/sp_14"
                tools:text="Champion Developer" />

            <TextView
                android:id="@+id/userEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_2"
                android:fontFamily="@font/poppins_regular"
                tools:text="jondoe@emergencyalert.app"
                android:textColor="@color/primaryTextColo"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/white_bg"
        android:elevation="@dimen/dp_3"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24">

        <RelativeLayout
            android:id="@+id/userProfileLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12">

            <TextView
                android:id="@+id/profileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                tools:text="Update Profile"
                android:textColor="@color/primaryTextColo"
                android:textSize="@dimen/sp_20"
                 />

            <ImageView
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="@string/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/userProfileLabel"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/dividerColor" />

        <RelativeLayout
            android:id="@+id/managePatientsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_12">

            <TextView
                android:id="@+id/mdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_medium"
                tools:text="Manage Patients"
                android:textColor="@color/primaryTextColo"
                android:textSize="@dimen/sp_20" />

            <ImageView
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="@string/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/managePatientsLabel"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/dividerColor" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/line2"
            android:layout_marginTop="@dimen/dp_14"
            android:background="#B3DFDDDD" />

        <TextView
            android:id="@+id/securityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_18"
            android:fontFamily="@font/poppins_regular"
            tools:text="Security"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/sp_20" />

        <RelativeLayout
            android:id="@+id/changePasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/securityLabel"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_12">

            <TextView
                android:id="@+id/changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                tools:text="Change Password"
                android:textColor="@color/primaryTextColo"
                android:textSize="@dimen/sp_20" />

            <ImageView
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="@string/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/changePasswordLabel"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/dividerColor" />

        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_38"
            android:background="@drawable/border_line"
            android:paddingStart="@dimen/dp_55"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_55"
            android:paddingBottom="@dimen/dp_6"
            android:visibility="visible">

            <TextView
                android:id="@+id/logoutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/logout"
                android:textAllCaps="true"
                android:textColor="@color/primaryButtonColorActive"
                android:textSize="@dimen/sp_20" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>